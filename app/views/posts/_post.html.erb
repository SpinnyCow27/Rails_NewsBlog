<div class="col-md-4 mb-4">
  <div class="card" style="border-radius: 10px; overflow: hidden;">
    <%= image_tag(asset_path(post.image), class: "card-img-top", style: "border-radius: 0;") %>
    <div class="card-body">
      <h5 class="card-title"><%= post.title %></h5>
      <p class="card-text"><%= post.description %></p>
      <%= link_to "Show this post", post, class: "btn btn-warning" %>
    </div>
  </div>
</div>
